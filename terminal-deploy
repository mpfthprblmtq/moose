# To start process, ensure that you have the compiled package-for-deploy .jar in the deploy folder

cp git/moose/src/resources/moose.icns git/moose/deploy
cd git/moose/deploy
mkdir -p package/macosx
cp moose.icns package/macosx
jdk=$(/usr/libexec/java_home)
$jdk/bin/javapackager -version
$jdk/bin/javapackager -deploy -native pkg -name Moose \
   -BappVersion=1.0.0 -Bicon=package/macosx/moose.icns \
   -srcdir . -srcfiles moose.jar -appclass moose.Main \
   -outdir out -v
cp out/Moose-*.pkg moose-installer.pkg
ls -l
echo done
